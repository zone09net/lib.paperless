{
	"compileOnSave": true,

	"compilerOptions": {
		"target": "es2018",
		"module": "es6",
		"moduleResolution": "node",
		"lib": [
			"dom", 
			"es2018"
		],

		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"noEmitOnError": false,
		"allowJs": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "./.dist",
		"baseUrl": "../",
		"paths": {
			"@zone09.net/foundation": ["lib.foundation/src/lib.foundation.ts"],
			"@extlib/matter": ["extlib/matter-0.20.0.js"]
		},
		"typeRoots": ["./types"],
		"types": ["OffscreenCanvas"]
	},

	"tsc-alias": {
		"verbose": true,
		"resolveFullPaths": true
	 },

	"include": [
		"./src/lib.paperless.ts"
	],

	"exclude": [
		"./node_modules",
		"./.dist",
		"./.rollup",
		"./.obfuscator",
		"./.minify"
	]
}
