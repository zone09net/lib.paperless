{
	"compileOnSave": true,

	"compilerOptions": {
		"target": "es2017",
		"module": "es6",
		"moduleResolution": "node",
		"lib": [
			"dom", 
			"es2018"
		],
		
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"noEmitOnError": false,
		"allowJs": false,
		"watch": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "./.dist",
		"baseUrl": "../",
		"paths": {
			"@zone09.net/foundation": ["lib.foundation/src/lib.foundation.ts"],
		},
	},

	"tsc-alias": {
		"verbose": true,
		"resolveFullPaths": true,
	 },

	"exclude": [
		"./node_modules",
		"./.dist",
		"./.rollup"
	]
}