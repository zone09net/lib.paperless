{
	"compileOnSave": true,

	"compilerOptions": {
		"target": "es2017",
		"module": "es6",
		"moduleResolution": "node",
		"lib": [
			"dom", 
			"es2018"
		],
		
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"noEmitOnError": false,
		"allowJs": false,
		"watch": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "../www.zone09.net/public/js/dev",
		"baseUrl": "../",
		"paths": {
			"@zone09.net/foundation": ["lib.foundation/src/lib.foundation.ts"],
			"@zone09.net/paperless": ["lib.paperless/src/lib.paperless.ts"],
		},
		"typeRoots": ["./types"],
		"types": ["OffscreenCanvas"],
	},

	"tsc-alias": {
		"verbose": true,
		"resolveFullPaths": true,
	 },

	 /*
	"include": [
		"./src/demo.paperless.ts",
	],
	*/
	
	"exclude": [
		"./node_modules",
		"./.dist",
		"./.rollup"
	]
}
